# ============================================================================
# Default targets
# ============================================================================
all: tests check

# ============================================================================
# Variables & source file targets
# ============================================================================
include ../mk/common.mk

SRCS:=$(shell $(GIT_LS) -- '**/*.c')
OBJS:=$(SRCS:.c=.o)
BINS:=$(OBJS:.o=)

$(BINS): %: %.o
	$(Q)$(CC) $(CFLAGS) -o $@ $<

# ============================================================================
# Top level targets
# ============================================================================
tests:

check:

clean:

format:

lint:

.PHONY: tests check clean format lint
